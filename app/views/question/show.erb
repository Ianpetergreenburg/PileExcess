<div class="container">
  <h2 class="show-question-title"><%= @question.title %></h2>

  <div class="wrap-vote-button">
    <form action="/questions/<%= @question.id %>/votes" method="post">
      <input type="hidden" name="vote_count" value="1" />
      <input class="vote-button arrow-up" type="submit" value="Vote Up">
    </form>

    <div id="vote-count"><%=@question.vote_count%></div>

    <form action="/questions/<%= @question.id %>/votes" method="post">
      <input type="hidden" name="vote_count" value="-1" />
      <input class="vote-button arrow-down" type="submit" value="Vote Down">
    </form>
  </div>

  <p class="question-content"><%= @question.content %></p>


  <div>
    <form id="new-answer-button" action="/questions/<%= @question.id %>/answers/new" method="get">
      <button id="<%= @question.id %>" type="submit" class="btn btn-lg btn-success">New Answer</button>
    </form>
  </div>

  <div id="answers">
    <% answers = @question.answers %>
    <ul>
    <% answers.each do |answer| %>
      <li>
        <%= answer.content %>
      </li>
    <% end %>
    </ul>
  </div>

  <div>
    <form action="/questions/<%= @question.id %>/comments/new" method="get">
      <button type="submit" class="btn btn-xs btn-success">New Comment</button>
    </form>
  </div>
</div>
