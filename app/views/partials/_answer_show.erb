<div id="answers">
  <% if @question.answers %>
    <ul id="answers-list">
      <% @question.answers.each do |answer| %>
        <p><strong><%= answer.content %></strong></p>

        <% if answer.comments %>
        <div class="container">
          <ul id="comments-<%= answer.id %>" class="comments-list">
            <% answer.comments.each do |comment| %>
              <li><%= comment.content %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <div id="<%= answer.id %>" class='comment-wrapper'>
          <form class="new-comment-form-button" action="/questions/<%= @question.id %>/answers/<%= answer.id %>/new" method="get">
            <button id="new-comment-button" type="submit" class="btn btn-xs btn-success">Comment On This Answer</button>
          </form>
        </div>
      <% end %>
    </ul>
  <% end %>
</div>
